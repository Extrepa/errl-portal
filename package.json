{
  "name": "errl-portal",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "start": "npm run portal:dev",
    "portal:dev": "vite",
    "portal:build": "vite build && npm run designer:build",
    "portal:preview": "electron electron/main.js",
    "portal:preview:dev": "NODE_ENV=development electron electron/main.js",
    "portal:backup": "bash tools/portal/backup-dist.sh",
    "portal:doctor:build": "bash tools/portal/doctor-build.sh",
    "portal:doctor:deps": "bash tools/portal/doctor-deps.sh",
    "portal:doctor:env": "bash tools/portal/doctor-env.sh",
    "portal:doctor:safe-mode": "bash tools/portal/doctor-safe-mode.sh",
    "portal:doctor:structure": "bash tools/portal/doctor-structure.sh",
    "portal:doctor:studio": "node tools/portal/doctor-studio.mjs",
    "portal:safety-check": "bash tools/portal/safety-check.sh",
    "portal:visual-test": "bash tools/portal/visual-test.sh",
    "portal:checkpoint": "bash tools/portal/checkpoint.sh",
    "portal:rollback": "bash tools/portal/rollback.sh",
    "dev": "npm run portal:dev",
    "build": "npm run portal:build",
    "preview": "npm run portal:preview",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test -g @ui",
    "test:visual": "playwright test tests/visual-regression.spec.ts",
    "test:visual:update": "playwright test tests/visual-regression.spec.ts --update-snapshots",
    "agent:browser": "tsx tools/browser-control/server.ts",
    "agent:browsers": "playwright install",
    "catalog:component-rips": "node tools/portal/generate-component-rips-manifest.mjs",
    "thumbnails:generate": "node tools/portal/generate-component-thumbnails.mjs",
    "thumbnails:force": "node tools/portal/generate-component-thumbnails.mjs --force",
    "inventory:scan": "node tools/portal/update-component-inventory.mjs",
    "extract:framer": "node tools/portal/extract-framer-browser.mjs",
    "postinstall": "playwright install",
    "studio:dev": "VITE_CFG=vite.studio.config.ts bash tools/portal/start-studio.sh",
    "studio:stop": "bash tools/portal/stop-studio.sh",
    "studio:logs": "bash tools/portal/logs-studio.sh",
    "studio:build": "vite build --config vite.studio.config.ts",
    "designer:build": "vite build --config vite.designer.config.ts",
    "studio:preview": "electron electron/main.js --studio",
    "precommit": "npm run typecheck && npm test && npm run portal:build"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "fabric": "6.7.1",
    "flubber": "^0.4.2",
    "gsap": "^3.13.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.552.0",
    "monaco-editor": "^0.53.0",
    "playwright": "^1.48.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.9.5",
    "zod": "^3.23.8",
    "framer-motion": "^11.0.0",
    "zustand": "^5.0.8",
    "paper": "^0.12.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/paper": "^0.12.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.19",
    "cors": "^2.8.5",
    "electron": "^39.2.3",
    "express": "^5.1.0",
    "mime-types": "^2.1.35",
    "multer": "^2.0.2",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^7.2.4"
  }
}
